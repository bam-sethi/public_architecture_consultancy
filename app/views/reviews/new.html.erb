<h1>add a new review</h1>

<%= form_for [@building, @review] do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, size: "15x10" %>
  </div>



<div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
</div>


<div class="field">
  <%= form.label :rating %>
  <%= form.text_field :rating %>
</div>

<div class="action">
    <%= form.submit 'New review' %>
</div>


<% end %>


